Sort By:
<%= link_to 'Title', articles_path + "?#{@order_by}" %> |
<%= link_to 'Word Count', articles_path + "?ob=word_count" %> |
<%= link_to 'Published', articles_path(params[:order_by => :published]) %>

<% @articles.each do |article| %>
  <div class="article">
    <h3><%= article.title %></h3>
    <p>
      <%= raw truncate(article.body, length: 200, separator: '...') %>
      <br>
      <%= link_to 'Show', article %> |
      <%= link_to 'Edit', edit_article_path(article) %> |
      <%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %>

    </p>
  </div>
<% end %>
